<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitBox" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/github_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/github_black</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ActionBarTheme">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/github_black</item>
    </style>

    <style name="ActivityWithActionBarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorControlActivated" tools:targetApi="l">@color/github_black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/github_black</item>
        <item name="colorPrimary">@color/github_black</item>
    </style>

    <style name="ThemeOverlay.GitBox.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>
</resources>